class Main {
    public static void main(String[] args) {
        int n = 5; // Number of rows

        for (int i = 1; i <= n; i++) {
            // Print spaces
            for (int j = 1; j <= i-1; j++) {
                System.out.print("  ");
            }

            // Print stars
            for (int j = 1; j <=(2*n)-(2*i-1); j++) {
                System.out.print("* ");
            }

            // Move to the next line
            System.out.println();
        }
    }
}
